@page "/employees"
@using System.Linq
@using Microsoft.EntityFrameworkCore
@using ScorpPlus.Models
@using ScorpPlus.Contexts
@inject EmployeeContext EmployeeContext
@attribute [Authorize]

<table class="table table-striped table-bordered">
    <tr class="text-center">
        <th scope="col">Id</th>
        <th scope="col">Fullname</th>
        <th scope="col">IIN</th>
        <th scope="col">Birth Date</th>
        <th scope="col">In Office</th>
        <th scope="col">Access History</th>
    </tr>
    <tbody>
    @foreach (var employee in _employees.OrderBy(x => x.Id))
    {
        <tr>
            <th scope="row">@employee.Id</th>
            <td class="text-left">
                <form action="/employee/@employee.Id" method="get">
                    <button class="btn btn-primary" type="submit">@employee.ToString()</button>
                </form>
            </td>
            <td>@employee.GetIin()</td>
            <td>@employee.GetBirthDate()</td>
            @if (employee.IsInOffice())
            {
                <td><span style="color: green">YES</span></td>
            }
            else
            {
                <td><span style="color: red">NO</span></td>
            }
            <td class="text-center">
                <form action="/accessHistories/@employee.Id" method="get">
                    <button class="btn btn-primary" type="submit">Show</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@code
{
    private Employee[] _employees;

    protected override async Task OnInitializedAsync()
    {
        _employees = EmployeeContext.Employees
            .Include(x => x.AccessHistories)
            .ThenInclude(x => x.Room)
            .ToArray();
    }
}