@page "/employees"
@using ScorpPlus.Contexts
@using ScorpPlus.Models
@using System.Linq
@using Telegram.Bot.Types
@inject EmployeeContext EmployeeContext

<table class="table table-striped table-bordered">
    <tr class="text-center">
        <th scope="col">Id</th>
        <th scope="col">Fullname</th>
        <th scope="col">IIN</th>
        <th scope="col">Birth Date</th>
        <th scope="col">Access History</th>
    </tr>
    <tbody>
    @foreach (var employee in _employees)
    {
        <tr>
            <th scope="row">@employee.Id</th>
            <td>@employee.ToString()</td>
            <td>@employee.Iin</td>
            <td>@employee.GetBirthDate()</td>
            <td class="text-center">
                <form action="/accessHistories/@employee.Id" method="get">
                    <button class="btn btn-primary" type="submit">Show</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@code
{
    private Employee[] _employees;

    protected override async Task OnInitializedAsync()
    {
        _employees = EmployeeContext.Employees.ToArray();
    }
}